{
  "name": "@erisa/commands",
  "version": "0.0.4-4",
  "description": "The default commands framework for Erisa.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/erisaaa/commands",
  "author": "Ovyerus <iamovyerus@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "mocha",
    "coverage": "nyc mocha",
    "lint": "eslint --fix --ext=.ts .",
    "compile": "tsc -p .",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "getopts": "^2.2.5",
    "split-string": "^6.1.0"
  },
  "peerDependencies": {
    "eris": "^0.9.0",
    "erisa": "^0.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "erisa": "^0.0.8",
    "eslint": "^6.8.0",
    "eslint-config-clarity": "^0.3.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
